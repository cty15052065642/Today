<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/activity_main_frame"
        style="@style/activity_main_frame">
    </FrameLayout>
    <LinearLayout
        android:id="@+id/activity_main_bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/activity_main_bottom_ll">
            <ImageView
                android:id="@+id/activity_main_bottom_iv_first"
                android:background="@drawable/ic_copyright_black_36dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/activity_main_bottom_tv_first"
                android:text="@string/activity_main_bottom_tv_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            style="@style/activity_main_bottom_ll">
            <ImageView
                android:id="@+id/activity_main_bottom_iv_watermelon"
                android:background="@drawable/ic_copyright_black_36dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/activity_main_bottom_tv_watermelon"
                android:text="@string/activity_main_bottom_tv_watermelon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            style="@style/activity_main_bottom_ll">
            <ImageView
                android:id="@+id/activity_main_bottom_iv_top_line"
                android:background="@drawable/ic_copyright_black_36dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/activity_main_bottom_tv_top_line"
                android:text="@string/activity_main_bottom_tv_top_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            style="@style/activity_main_bottom_ll">
            <ImageView
                android:id="@+id/activity_main_bottom_iv_small_video"
                android:background="@drawable/ic_copyright_black_36dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/activity_main_bottom_tv_small_video"
                android:text="@string/activity_main_bottom_tv_small_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
